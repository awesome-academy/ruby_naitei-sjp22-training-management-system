<!-- Trainer List -->
<div class="trainer-section">
  <h2 class="section-title">
    <%= t("courses.members.trainer_list") %> (<%= trainer_count %>)
  </h2>

  <div class="trainer-list">
    <% trainers.each do |trainer| %>
      <%= render partial: "courses/trainer_item", locals: {trainer: trainer, course: @course} %>
    <% end %>
  </div>
</div>
