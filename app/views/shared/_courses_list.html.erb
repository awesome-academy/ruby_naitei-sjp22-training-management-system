<div class="course-dashboard">
  <h1><%= t(".course_dashboard_title") %></h1>
  <div class="row filter-form">
    <div class="col-md-6">
      <%= form_with(url: root_path, method: :get, local: true) do |f| %>
        <div class="input-group">
          <%= f.select :status,
                       options_for_select(
                         [[t(".all_statuses"), ""]] +
                         Course.statuses.keys.map {|s| [t("#{s}"), s]},
                         params[:status]
                       ),
                       {},
                       class: "form-control" %>
          <span class="input-group-btn">
            <%= f.submit t(".apply"), class: "btn btn-primary" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>

    <div class="row">
      <% if @courses.any? %>
        <%= render partial: "courses/course_card", locals: {course: @courses} %>
      <% else %>
        <div class="col-12">
          <p class="text-muted"><%= t(".no_courses_found") %></p>
        </div>
      <% end %>
    </div>

  <div class="text-center mt-4">
    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > Settings.allowed_pagy %>
  </div>
</div>
