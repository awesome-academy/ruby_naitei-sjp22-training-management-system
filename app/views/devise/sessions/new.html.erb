<% provide :title, t(".title") %>
<h2><%= t(".heading") %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email, t(".email_label") %>
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
      <%= link_to t(".forgot_your_password"), new_user_password_path %>
      <%= f.label :password, t(".password_label") %>
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>

      <%= f.submit t(".submit_button"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t(".new_user_text") %> <%= link_to t(".sign_up_link"), new_registration_path(resource_name) %></p>
  </div>
</div>
