<% provide :title, t(".title") %>

<div class="dashboard-container">
  <h2 class="section-title"><%= t(".overview") %></h2>
  <div class="row g-3 mb-4">
    <div class="col-lg-3 col-md-6">
      <div class="stat-card">
        <span><%= t(".trainers") %>:</span>
        <span class="stat-value"><%= @overview_stats[:trainers] %></span>
      </div>
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="stat-card">
        <span><%= t(".trainees") %>:</span>
        <span class="stat-value"><%= @overview_stats[:trainees] %></span>
      </div>
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="stat-card">
        <span><%= t(".active_courses") %>:</span>
        <span class="stat-value"><%= @overview_stats[:active_courses] %></span>
      </div>
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="stat-card">
        <span><%= t(".completion_rate") %>:</span>
        <span class="stat-value"><%= @overview_stats[:completion_rate] %></span>
      </div>
    </div>
  </div>

  <div class="courses-section">
    <div class="courses-header">
      <h2 class="section-title"><%= t(".active_courses_title") %></h2>
      <div class="pagination-search-wrapper">
        <%== pagy_bootstrap_nav(@pagy) %>
        <div class="search-form-wrapper">
          <%= form_with url: admin_dashboards_path, method: :get, class: "d-flex", id: "search-form" do %>
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: t(".search") %>
          <% end %>
        </div>
      </div>
    </div>
    
    <%= render "tables", courses: @courses %>

  </div>
</div>
