<% @supervisors.each do |supervisor| %>
  <tr class="supervisor-row">
    <!-- Checkbox for bulk actions -->
    <td class="checkbox-col">
      <input type="checkbox" class="form-check-input supervisor-checkbox" value="<%= supervisor.id %>">
    </td>

    <!-- Name (clickable link) -->
    <td class="name-col">
      <%= link_to supervisor.name,
                  supervisor_user_path(supervisor),
                  class: "text-decoration-none fw-bold text-primary supervisor-name" %>
    </td>

    <!-- Email -->
    <td class="email-col">
      <span class="text-muted"><%= supervisor.email %></span>
    </td>

    <!-- Gender -->
    <td class="gender-col">
      <span class="badge bg-light text-dark">
        <%= t(".gender.#{supervisor.gender&.to_sym || :other}") %>
      </span>
    </td>

    <!-- Birthday -->
    <td class="birthday-col">
      <span class="text-muted">
        <%= supervisor.birthday&.strftime(Settings.user.birthday_format) %>
      </span>
    </td>

    <!-- Status -->
    <td class="status-col">
      <% case supervisor.activated %>
      <% when true %>
        <span class="badge bg-success status-badge">
          <i class="fas fa-check-circle me-1"></i>
          <%= t(".active") %>
        </span>
      <% when false %>
        <span class="badge bg-secondary status-badge">
          <i class="fas fa-times-circle me-1"></i>
          <%= t(".inactive") %>
        </span>
      <% else %>
        <span class="badge bg-light text-dark status-badge">
          <i class="fas fa-question-circle me-1"></i>
          <%= t(".unknown") %>
        </span>
      <% end %>
    </td>

    <!-- Actions -->
    <td class="actions-col">
      <div class="btn-group" role="group">
        <!-- View Profile -->
        <%= link_to admin_user_path(supervisor),
                    class: "btn btn-outline-info btn-sm action-btn",
                    title: t(".view_profile") do %>
          <i class="fas fa-eye"></i>
        <% end %>

        <!-- Deactivate/Activate -->
        <% if supervisor.activated? %>
          <%= link_to update_status_admin_user_path(supervisor, activated: false),
                      data: {turbo_method: :patch, turbo_confirm: t(".deactivate_confirm")},
                      class: "btn btn-outline-warning btn-sm action-btn",
                      title: t(".deactivate") do %>
            <i class="fas fa-ban"></i>
          <% end %>
        <% else %>
          <%= link_to update_status_admin_user_path(supervisor, activated: true),
                      method: :patch,
                      data: {turbo_method: :patch, turbo_confirm: t(".activate_confirm")},
                      class: "btn btn-outline-success btn-sm action-btn",
                      title: t(".activate") do %>
            <i class="fas fa-check"></i>
          <% end %>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
