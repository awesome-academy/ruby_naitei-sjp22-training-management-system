<div class="container-fluid">
  <!-- Page Title -->
  <div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h2 class="page-title mb-0">
        <i class="fas fa-users me-2"></i>
        <%= t(".title") %>
      </h2>
      <%= link_to new_supervisor_admin_users_path, class: "btn btn-success btn-lg shadow" do %>
        <i class="fas fa-user-plus me-2"></i>
        <%= t(".add_supervisor") %>
      <% end %>
    </div>
  </div>

  <!-- Filter and Search Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="filter-section">
        <div class="filter-header">
          <h5 class="filter-title">
            <i class="fas fa-filter me-2"></i>
            <%= t(".filter_title") %>
          </h5>
        </div>

        <%= render "filter_form" %>
      </div>
    </div>
  </div>

  <!-- Bulk Actions Section -->
  <div class="row mb-3">
    <div class="col-12">
      <div class="bulk-actions d-none">
        <div class="bulk-actions-content">
          <span class="bulk-actions-label">
            <i class="fas fa-check-square me-1"></i>
            <span class="selected-count"><%= Settings.views.admin.users.index.selected_count %></span> <%= t(".items_selected") %>
          </span>
          <div class="bulk-actions-buttons">
            <button type="button" class="btn btn-danger btn-sm" id="bulk-deactivate-btn-admin-page">
              <i class="fas fa-ban me-1"></i> <%= t(".change_status") %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- supervisors Table -->
  <div class="row">
    <div class="col-12">
      <div class="table-card">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-primary">
              <tr>
                <th scope="col" class="checkbox-col">
                  <input type="checkbox" id="select-all" class="form-check-input">
                </th>
                <th scope="col">
                  <i class="fas fa-user me-1"></i>
                  <%= t(".name") %>
                </th>
                <th scope="col">
                  <i class="fas fa-envelope me-1"></i>
                  <%= t(".email") %>
                </th>
                <th scope="col">
                  <i class="fas fa-venus-mars me-1"></i>
                  <%= t(".gender") %>
                </th>
                <th scope="col">
                  <i class="fas fa-birthday-cake me-1"></i>
                  <%= t(".birthday") %>
                </th>
                <th scope="col">
                  <i class="fas fa-toggle-on me-1"></i>
                  <%= t(".status") %>
                </th>
                <th scope="col" class="actions-col">
                  <i class="fas fa-cogs me-1"></i>
                  <%= t(".actions") %>
                </th>
              </tr>
            </thead>
            <tbody>
              <%= render "supervisor_infor_list", supervisors: @supervisors %>
              <!-- Empty state -->
              <% if @supervisors.empty? %>
                <tr>
                  <td colspan="7" class="text-center py-5">
                    <div class="empty-state">
                      <i class="fas fa-users fa-4x text-muted mb-3"></i>
                      <h5 class="text-muted mb-2"><%= t(".no_supervisors_found") %></h5>
                      <p class="text-muted small">
                        <%= t(".no_supervisors_description") %>
                      </p>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Pagination -->
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div class="pagination-info">
          <% if @supervisors.any? %>
            <small class="text-muted">
              <i class="fas fa-info-circle me-1"></i>
              <%= t(".showing_results") %>
            </small>
          <% end %>
        </div>
        <nav aria-label="Page navigation" class="ms-auto">
          <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > Settings.pagination.min_pages_to_show %>
        </nav>
      </div>
    </div>
  </div>
</div>
