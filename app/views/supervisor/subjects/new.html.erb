<% provide(:title, t(".title")) %>
<h2 class="mt-15 mb-15"><%= t(".title") %></h2>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-9 col-md-10 main">
      <div class="col-sm-12">
        <%= form_with(model: @subject, url: supervisor_subjects_path, local: true) do |f| %>
          <%= render "shared/error_messages", object: f.object %>

          <div class="pull-right">
            <%= link_to supervisor_subjects_path, class: "btn btn-default" do %>
              <i class="fa fa-times"></i> <%= t(".cancel") %>
            <% end %>

            <button type="submit" class="btn btn-primary">
              <i class="fa fa-save"></i> <%= t(".add") %>
            </button>
          </div>
          <div class="clearfix"></div>
          <div class="form-group">
            <div class="row mb-3">
              <div class="col-sm-3">
                <%= f.label :name, t(".subject_name"), class: "control-label" %>
              </div>
              <div class="col-sm-9">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-3">
                <%= f.label :max_score, t(".max_score"), class: "control-label" %>
              </div>
              <div class="col-sm-9">
                <%= f.text_field :max_score, class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-3">
                <%= f.label :estimated_time_days, t(".estimated_time_days"), class: "control-label" %>
              </div>
              <div class="col-sm-9">
                <%= f.text_field :estimated_time_days, class: "form-control" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
