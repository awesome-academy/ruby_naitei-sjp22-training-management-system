<% provide(:title, @user_trainee.name) %>

<div class="trainee-manager-page">
  <!-- Page Header with Title and Actions -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0"><%= @user_trainee.name %></h1>
    <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle action-btn" type="button" id="traineeActions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-cog mr-2"></i><%= t(".actions") %>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="traineeActions">
        <li>
          <%= link_to "#", class: "dropdown-item", data: { toggle: "modal", target: "#editProfileModal" } do %>
            <i class="fas fa-edit mr-2"></i><%= t(".edit_profile") %>
          <% end %>
        </li>
        <li>
          <% if @user_trainee.activated? %>
            <%= link_to update_status_supervisor_user_path(@user_trainee, activated: false), class: "dropdown-item", data: {turbo_method: :patch} do %>
              <i class="fas fa-ban mr-2"></i><%= t(".deactivate_account") %>
            <% end %>
          <% else %>
            <%= link_to update_status_supervisor_user_path(@user_trainee, activated: true), class: "dropdown-item", data: {turbo_method: :patch} do %>
              <i class="fas fa-check mr-2"></i><%= t(".activate_account") %>
            <% end %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <!-- Trainee Personal Information Card -->
  <div class="trainee-info-card mb-4">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="info-item">
              <strong><%= t(".email") %>:</strong> <%= @user_trainee.email %>
            </div>
            <div class="info-item">
              <strong><%= t(".name") %>:</strong> <%= @user_trainee.name %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-item">
              <strong><%= t(".date_of_birth") %>:</strong> 
              <%= @user_trainee.birthday ? @user_trainee.birthday.strftime(Settings.formats.date) : Settings.nil_value %>
            </div>
            <div class="info-item">
              <strong><%= t(".gender") %>:</strong> 
              <%= @user_trainee.gender ? t("enums.user.gender.#{@user_trainee.gender}") : Settings.nil_value %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filter Section -->
  <div class="filter-section mb-4">
    <div class="filter-header">
      <h5 class="filter-title"><%= t(".course_history") %></h5>
    </div>

   <%= render "supervisor/users/filter_user_details_form", user_trainee: @user_trainee %>
  </div>

  <!-- Course History Table -->
  <div class="table-card">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th scope="col"><%= t(".table.id") %></th>
            <th scope="col"><%= t(".table.courses") %></th>
            <th scope="col"><%= t(".table.progress") %></th>
            <th scope="col"><%= t(".table.trainers") %></th>
            <th scope="col"><%= t(".table.status") %></th>
            <th scope="col" class="actions-col"><%= t(".table.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% if @trainee_courses.any? %>
            <% @trainee_courses.each_with_index do |course, index| %>
              <%= render "supervisor/users/user_courses_list", course: course, user_trainee: @user_trainee, index: index %>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="text-center empty-state">
                <i class="fas fa-graduation-cap fa-3x mb-3"></i>
                <p class="text-muted mb-0"><%= t(".no_courses") %></p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-between align-items-center mt-4">
    <div class="pagination-info text-muted">
      <%= t(".showing_courses", count: @trainee_courses.count) %>
    </div>
    <div class="pagination-container">
       <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > Settings.pagination.min_pages_to_show %>
    </div>
  </div>
</div>

<!-- Edit Profile Modal -->
<%= render "supervisor/users/modal_edit_profile" %>
