<% provide(:title, t(".title")) %>

<div class="flex-container space-between align-center height-fit">
  <h3 class="page-header"><%= t(".title") %></h3>
  <%= link_to edit_supervisor_task_path(@task), class: "btn btn-primary pull-right" do %>
    <i class="fa fa-pencil"></i> <%= t(".edit") %>
  <% end %>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-9 col-md-10 main">
      <div class="col-sm-8">
        <div class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-3 control-label"><%= t(".subject_name") %>:</label>
            <div class="col-sm-9">
              <p class="form-control-static"><%= @task.taskable.name %></p>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label"><%= t(".task_name") %>:</label>
            <div class="col-sm-9">
              <p class="form-control-static"><%= @task.name %></p>
            </div>
          </div>

          <div class="form-group text-right">
            <div class="col-sm-offset-3 col-sm-9">
              <%= link_to t(".back"), supervisor_tasks_path, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
