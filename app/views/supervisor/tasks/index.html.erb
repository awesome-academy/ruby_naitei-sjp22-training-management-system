<% provide(:title, t(".title")) %>

<%= render "shared/masterdata_navbar" %>

<div class="row mt-15 mb-15">
  <div class="col-xs-6">
    <h2 class="m-0 lh-34"><%= t(".title") %></h2>
  </div>
  <div class="col-xs-6 text-right">
    <%= link_to t(".add_task"), new_supervisor_task_path, class: "btn btn-primary mt-5" %>
  </div>
</div>

<div class="card p-3 mb-4">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-xs-8">
        <%= form_with url: supervisor_tasks_path, method: :get, class: "form-inline" do |form| %>
          <div class="form-group">
            <%= form.select :subject_id,
              options_for_select(Subject.all.map { |c| [c.name, c.id] }, params[:subject_id]),
              { prompt: t(".select_subject_placeholder") },
              { class: "form-control" } %>
          </div>
          <div class="form-group">
            <%= form.submit t("shared.filter.apply_filter"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



<%= render partial: "shared/search_box", locals: {path_to_search: supervisor_tasks_path} %>
<%= render "tasks_table" %>
