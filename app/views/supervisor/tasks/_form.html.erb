<%= form_with(model: @task, url: form_url, local: true) do |f| %>
          <div class="col-sm-offset-10 col-sm-2 form-group text-right flex-container pull-right">
            <%= link_to @task.persisted? ? supervisor_task_path(@task) : supervisor_tasks_path, class: "btn btn-default" do %>
              <i class="fa fa-times"></i> <%= t("common.cancel") %>
            <% end %>
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-save"></i> <%= submit_label %>
            </button>
          </div>
          <%= render "shared/error_messages", object: f.object %>
          <%= f.hidden_field :taskable_type, value: Subject.name %>
          <div class="form-group">
            <div class="row">
              <div class="col-sm-3">
                <%= f.label :taskable_id, t(".subject_name"), class: "control-label" %>
              </div>
              <div class="col-sm-9">
                <%= f.collection_select :taskable_id, Subject.all, :id, :name, {prompt: t(".choose_subject")}, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-sm-3">
                <%= f.label :name, t(".task_name"), class: "control-label" %>
              </div>
              <div class="col-sm-9">
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
          </div>
        <% end %>
