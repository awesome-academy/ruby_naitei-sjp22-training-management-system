<div class="flex-container subject-row" style="margin-bottom:5px;">
  <%= f.select :subject_id, options_for_select(Subject.all.map {|s| [s.name, s.id]}), {}, class: "form-control", style: "width:50%;" %>
  <%= f.text_field :position, placeholder: t(".position"), class: "form-control", style: "width:30%; margin-left:5px;" %>
  <button type="button" class="btn btn-danger btn-sm remove-subject" style="margin-left:5px;"><%= t(".delete") %></button>
</div>
