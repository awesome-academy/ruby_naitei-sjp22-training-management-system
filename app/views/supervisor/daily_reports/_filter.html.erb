<div class="card p-3 mb-4">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-xs-8">
        <%= form_with url: supervisor_daily_reports_path, method: :get, class: "form-inline" do |form| %>
          <%= form.select :course_id, options_for_select(current_user.supervised_courses.map {|c| [c.name, c.id]}, params[:course_id]), {prompt: t("shared.filter.select_course_placeholder")}, {class: "form-control form-select"} %>
          <%= form.select :user_id, options_for_select(User.trainee.by_course(current_user.supervised_course_ids).map {|c| [c.name, c.id]}, params[:user_id]), {prompt: t("shared.filter.select_user_placeholder")}, {class: "form-control form-select"} %>
          <%= form.date_field :filter_date, value: params[:filter_date], class: "form-control date-picker" %>
          <button class="btn btn-primary" type="submit"><%= t("shared.filter.apply_filter") %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>
