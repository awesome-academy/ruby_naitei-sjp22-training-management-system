<div class="modal fade" id="editCommentModal<%= comment.id %>" tabindex="-1" role="dialog" aria-labelledby="editCommentModalLabel<%= comment.id %>" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with model: comment, url: update_comment_supervisor_course_subject_detail_path(@course_subject.course, @subject), 
                    method: :patch, local: true, data: { turbo: false } do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="editCommentModalLabel<%= comment.id %>"><%= t('.edit_comment_modal_title') %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <%= form.label :content, t('.comment_content_label'), class: "form-label" %>
            <%= form.text_area :content, class: "form-control", rows: 4, required: true %>
          </div>
          <input type="hidden" name="comment_id" value="<%= comment.id %>" />
          <input type="hidden" name="user_id" value="<%= @user_subject.user_id %>" />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('.cancel') %></button>
          <%= form.submit t('.update_comment'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
