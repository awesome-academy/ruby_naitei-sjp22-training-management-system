<div class="modal fade" id="addCommentModal" tabindex="-1" role="dialog" aria-labelledby="addCommentModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with model: Comment.new, url: create_comment_supervisor_course_subject_detail_path(@course_subject.course, @subject, user_id: @user_subject.user_id),
                    method: :post, local: true, data: {turbo: false} do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="addCommentModalLabel"><%= t(".add_comment_modal_title") %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <%= form.label :content, t(".comment_content_label"), class: "form-label" %>
            <%= form.text_area :content, class: "form-control", rows: 4,
                               placeholder: t(".comment_placeholder"), required: true %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t(".cancel") %></button>
          <%= form.submit t(".add_comment_submit"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
