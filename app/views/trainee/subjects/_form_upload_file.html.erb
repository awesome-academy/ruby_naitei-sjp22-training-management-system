<%= form_with url: update_document_trainee_user_task_path,
        method: :patch,
        local: true,
        data: {turbo: true},
        html: {multipart: true} do |f| %>
  <div class="form-group mb-3">
  <%= f.hidden_field :task_id, value: task.id %>
  <%= f.hidden_field :user_subject_id, value: @user_subject.id %>
  <%= f.label :document, t(".choose_file"), class: "font-weight-bold mb-2" %>
  <%= f.file_field :document,
      multiple: true,
      accept: Settings.user_task.allowed_document_types.join(","),
      data: {max_file_size_mb: Settings.user_task.max_file_size_mb, allowed_document_types: Settings.user_task.allowed_document_types.join(",")},
      class: "form-control-file p-2 border rounded",
      id: "task_document_#{task.id}",
      required: true %>
  </div>
  <div class="d-flex justify-content-between">
  <button type="button"
      class="btn btn-outline-secondary px-4"
      onclick="toggleUploadForm('<%= task.id %>')">
    <i class="fas fa-times mr-2"></i> <%= t(".close") %>
  </button>
  <%= f.submit t(".submit"), class: "btn btn-primary px-4 font-weight-bold" %>
  </div>
<% end %>
